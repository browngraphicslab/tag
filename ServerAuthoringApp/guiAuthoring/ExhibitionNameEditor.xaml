<Window x:Class="guiAuthoring.ExhibitionNameEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExhibitionNameEditor" Height="180" Width="350">
    <Canvas>
        <Label Name="nameExhibition" FontSize="20" Content="Name:" Canvas.Top="34" Canvas.Left="12" />
        <TextBox Name="ExhibitionName" FontSize="20" Width="220" Height="40" Canvas.Top="31" Canvas.Left="96" Background="AliceBlue"/>
        <Button Name="ok" Content="OK" Width="122" Height="35" Canvas.Bottom="12" Canvas.Left="194" Click="ok_Click" />
        <Button Name="cancel" Content="Cancel" Width="120" Height="35" Canvas.Bottom="12" Canvas.Right="196" Click="cancel_Click" />
    </Canvas>
</Window>
