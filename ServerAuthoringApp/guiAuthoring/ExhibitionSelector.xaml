<Window x:Class="guiAuthoring.ExhibitionSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExhibitionSelector" Height="356" Width="300">
    <Grid>
        <ListBox Height="230" HorizontalAlignment="Left" Margin="12,12,0,0" Name="ExhibitionSelection" VerticalAlignment="Top" Width="254" />
        <Button Content="Cancel" Height="28" HorizontalAlignment="Left" Margin="12,277,0,0" Name="CancelAddExhibition" VerticalAlignment="Top" Width="100" Click="CancelAddExhibition_Click" />
        <Button Content="Add" Height="28" HorizontalAlignment="Left" Margin="166,277,0,0" Name="AddExhibition" VerticalAlignment="Top" Width="100" Click="AddExhibition_Click" />
        <Label Content="You must select at least one exhibiton." Height="24" HorizontalAlignment="Left" Margin="12,243,0,0" Name="SelectorLabel" VerticalAlignment="Top" Width="254" />
    </Grid>
</Window>
