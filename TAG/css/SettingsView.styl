#setViewRoot
    background-color rgb(219,217,204)
    color black
    width 100%
    height 100%

#setViewRoot input
    border-width thin

#setViewTopBar
    height 8%
    min-height 25px
    width 100%
    background-color rgb(63,55,53)

#setViewBackButton
    height 63%
    margin-left 1.2%
    width auto
    top 18.5%
    position relative


#setViewTopBarLabel
    margin-right 2%
    margin-top: 0.36%
    color white
    position absolute
    text-align right
    right 0px
    top 0px
    //add if constrain and position not neccessary..? test on diff sizes!
    //height 92%
    //width 40%

#setViewNavBar 
    height 92%
    width 23%
    float left

#setViewRoot .navContainer
    min-height 40px
    height 10%
    background transparent
    color black
    margin-top 2%
    padding-top 4%
    padding-bottom 4%

#setViewRoot .navtext
    font-size 100%
    display block
    margin-left 6.95%
    margin-top 0.372%

#setViewRoot .navsubtext
    font-size 70%
    display block
    margin-left 6.95%
    margin-top 0.372%

#setViewMiddleBarContainer
    width 22%
    height 92%
    float left

#setViewRoot .middleLabel
    min-height 20px
    height 8%
    padding-left 2%
    padding-top 2%
    padding-bottom 2%
    margin-right 3.2%
    margin-bottom 3%
    overflow hidden
    position relative

#setViewRoot .middleLabel .labelText
    font-size 100%
    color black
    display inline-block
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    vertical-align top

#setViewSearchContainer
    min-height 40px
    height 8%
    width 100%
    margin-top 2.5%
    margin-bottom 2.5%

#setViewSearchBar
    width 55%
    border-color rgb(167,180,174)
    margin-top: 2%
    margin-left: 3.5%
    border-style solid

#setViewRoot .button
    font-size 75%
    height 50%
    min-width 19%
    padding-left 2%
    padding-right 2%

#setViewRoot button
    border-style solid
    border-color black
    color black
    border-width thin
    background transparent

#setViewNewButton
    float right
    height 70%
    width 30%
    font-size 85%
    margin-top 1%
    padding-bottom 1%

#setViewSecondaryButton
    float right
    height 100%
    margin-top 1%
    padding-bottom 1%
    margin-right 15px
    display none

#setViewRoot input[type='text']
    border-style solid
    color black
    border-color rgb(167, 180, 174)
    padding .5%

#setViewRoot input[type='password']
    border-style solid
    border-color rgb(167, 180, 174)

#setViewMiddleBar
    width 100%
    height 92%

#setViewMiddleLabelContainer
    padding-left 3.5%
    padding-right 20px
    padding-bottom 5%
    padding-top 2%
    height 92%
    overflow auto

#setViewMiddleLoading
    padding 2%
    height 40px
    margin-right 3%

#setViewLoadingLabel
    font-size 160%

#setViewLoadingCircle
    height 40*0.96 px
    width auto
    float right

#setViewRightBar
    height 92%
    width 54%
    float right
    position relative

#setViewViewer
    color white
    position absolute
    font-size 6pt
    background black
    top 0%
    right 0px
    z-index 5
    overflow hidden
    //height 60%
    width 100%

#setViewRoot textarea
    color black
    border-color rgb(167, 180, 174)
    padding .5%

#setViewButtonContainer
    width 100%
    position absolute
    height 40px
    z-index 5
    background-color rgb(219,217,204)
    margin-top 0.35%
    margin-bottom 2.5%

#setViewSettingsBar
    width 100%
    position absolute
    bottom 0px
    overflow auto
    
#setViewSettingsContainer
    color black
    margin-left 2%
    margin-top 3%
    margin-bottom 3%
    margin-right 0%

#setViewRoot .settingLine
    height 20px
    width 100%
    margin-bottom 4%

#setViewRoot .settingLine .labelText
    color black
    font-size 100%  
    overflow hidden
    text-overflow ellipsis
    font-style italic
    display inline-block
    height 100%

#setViewRoot .settingInput
    font-size 100%
    float right
    margin-right 3%
    box-sizing border-box
    height 100%
    color black

#setViewRoot .button .settingButton
    height 100%
