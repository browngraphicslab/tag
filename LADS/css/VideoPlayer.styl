@import 'common'


TOPBAR_BGCOLOR = rgb(63,55,53)
TOPBAR_HEIGHT = 8%
SEEKBAR_TOP=44%
subtract(a,b)
	a - b

divide(a,b)
	a / b
#VideoPlayerRoot
	wh 100%
	overflow-x hidden	

#VideoPlayerRoot #backButton
	width 60%
	height auto

#VideoPlayerRoot #backButtonContainer
	position absolute
	width 5%
	top 20%
	left 1%

#VideoPlayerRoot #bottomBar
	background-color TOPBAR_BGCOLOR
	height TOPBAR_HEIGHT
	width 100%
	top 92%
	position absolute


#VideoPlayerRoot #currentTimeDisplay
	width 5%
	height 100%
	display inline-block
	color white
	position relative
	vertical-align top
	top divide(SEEKBAR_TOP,1.5)

#VideoPlayerRoot #overlayOnRoot
	position absolute
	left 0px
	top 0px
	background-color rgba(255,0,0,1)
	width 100%
	height auto


#VideoPlayerRoot #playHolder
	position relative
	height 70%
	width auto
	display inline-block
	margin 0 1%
	top 12%
	margin-left 22%


#VideoPlayerRoot #playPauseButton
	position relative
	height 100%
	width auto
	display inline-block

#VideoPlayerRoot #seek-bar
	padding 1%
	width 40%
	height 10%
	margin-top 1%
	margin-left 1%
	display inline-block


#VideoPlayerRoot #timeContainer
	height 20px
	width 40px
	margin 0px 1% 0px 1%
	padding 0
	display inline-block
	overflow hidden
	


#VideoPlayerRoot #topBar
	background-color TOPBAR_BGCOLOR
	position absolute
	width 100%
	height 8%

#VideoPlayerRoot #videoContainer
	background-color black
	position absolute
	width 100%
	height subtract(100%,2*TOPBAR_HEIGHT)
	text-align center
	top 8%

#VideoPlayerRoot #video
	position relative
	width 100%
	max-width 100%
	max-height 100%

#VideoPlayerRoot #videoControlsButton
	height 50%
	width auto
	position relative
	display inline-block


#VideoPlayerRoot #volHolder
	margin 0px 2.5%
	top 15%
	width auto
	height 100%
	display inline-block
	position relative
	vertical-align top
	top divide(SEEKBAR_TOP,2)

#sliderContainer
	display inline-block
	border 1px solid #ffffff
	height 10%                              
	position relative
	width 40% 
	vertical-align top
	top SEEKBAR_TOP                         

#sliderPoint
	display inline-block
	height 100%
	left 0%
	position absolute
	top 0%
	width 0%
	background-color white

#sliderControl
	display inline-block
	height 150%
	width 2%
	left 0%
	margin-top -0.6%
	background-color white
	position absolute
	border-radius 5px
	border-style solid
	border-width 5px
	border-bottom-color white
	border-left-color white
	border-right-color white
	border-top-color white
	height 0px
	width 0px

